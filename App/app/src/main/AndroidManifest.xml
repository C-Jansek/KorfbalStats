<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jansek.korfbalstats">

    <application android:name="com.jansek.korfbalstats.Korfbalstats"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/ks_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KorfbalStats">
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:screenOrientation="landscape"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeActivity">

            <intent-filter>
                <action android:name="android.intent.action.HOME"
                    android:screenOrientation="portrait"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlayersActivity">

            <intent-filter>
                <action android:name="android.intent.action.PLAYERS"
                    android:screenOrientation="portrait"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MatchActivity">

            <intent-filter>
                <action android:name="android.intent.action.MATCH"
                    android:screenOrientation="landscape"
                    />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MatchStartActivity">

            <intent-filter>
                <action android:name="android.intent.action.MATCH"
                    android:screenOrientation="landscape"
                    />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>