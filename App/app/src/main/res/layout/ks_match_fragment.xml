<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goal_button_1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ks_goal_button"
            android:layout_toLeftOf="@id/goal_button_1B"
            android:layout_marginRight="16dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/goal_button_1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ks_goal_button"
            android:layout_toLeftOf="@id/goal_button_1C"
            android:layout_marginRight="16dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/goal_button_1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ks_goal_button"
            android:layout_toLeftOf="@id/goal_button_1D"
            android:layout_marginRight="16dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/goal_button_1D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ks_goal_button"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</ScrollView>